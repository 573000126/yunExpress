                        }
                       
                        @if (articleModel != null)
                        { 
                         <div class="mb10 rel"> <span class="idxm_position"> <span class="idxm_w">@articleModel.CreatedOn.Value.Day</span> <span class="db lh20 tc">@articleModel.CreatedOn.Value.Year-@articleModel.CreatedOn.Value.Month</span> </span>
