                                <h4 class="mb10"> <a href="@Url.Action("NewDetailed", "New", new { id =articleModel.ArticleID })">@articleModel.Title</a> </h4>
                                <div class="lh20">
                                    @{
                                          string detailInfo = !string.IsNullOrEmpty(articleModel.Detail) ? checkHtml.ParseTags(articleModel.Detail).Length > 50 ?checkHtml.ParseTags(articleModel.Detail).Substring(0, 50) : checkHtml.ParseTags(articleModel.Detail) : "";
                                    }
                                    @detailInfo
                                    
                                </div>
                            </div>
                         </div>
                        }

                       <br />
                        <ul class="lh32">
                           
                            @foreach (var item in Model.ArticleModels.Skip(1))
                            {
                              <li class="cell_bk rel">
                                <div class="pct80 ell"> <a href="@Url.Action("NewDetailed", "New", new { id =item.ArticleID })" class="A">@checkHtml.ParseTags(item.Title)</a> </div>
                                <div class="abs_r"> <span>@item.CreatedOn.Value.ToString("yyyy-MM-dd")</span> </div>
                              </li>
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
