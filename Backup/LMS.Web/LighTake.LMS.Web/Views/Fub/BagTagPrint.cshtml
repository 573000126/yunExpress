@model  LMS.Controllers.FubController.Models.BagTagPrintModel
@{    
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>袋牌打印</title>
</head>
<body style="margin:0;">
    @{
        if (Model == null)
        {
            <h1 style="color:red">无效出仓单号!</h1>
        }
        else
        {
            for (var i = 1; i <= 2; i++)
            {        
        <div style="width: 350px; height: 350px; position: relative; page-break-after: always; border: 2px solid #000; font-size: 10px; line-height: 11px; font-family: Arial, Helvetica, sans-serif; page-break-after: always">
            <table class="ke-zeroborder" cellpadding="5" cellspacing="0" border="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <div style="font-size: 20px; font-weight: bold; padding: 10px 10px 0 20px;">
                                国际小包优+
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div style="padding: 20px 20px; font-size:14px; font-weight:bold;">
                <table cellpadding="0" cellspacing="0" width="100%">
                    <tbody>
                        <tr>
                            <td>
                                <table cellpadding="5" cellspacing="0" width="100%" style="border: 1px solid #000;">
                                    <tr>
                                        <td valign="top" width="50%" align="center" style="border-bottom: 1px solid #000; border-right: 1px solid #000;">件数
                                        </td>
                                        <td style="border-bottom: 1px solid #000;" align="center">@Model.Qty
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="top" width="50%" align="center" style="border-bottom: 1px solid #000; border-right: 1px solid #000;">重量
                                        </td>
                                        <td style="border-bottom: 1px solid #000;" align="center">@(Model.TotalWeight) (kg)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="top" width="50%" align="center" style="border-bottom: 1px solid #000; border-right: 1px solid #000;">流水
                                        </td>
                                        <td style="border-bottom: 1px solid #000;" align="center">@Model.SerialNumber
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="top" width="50%" align="center" style="border-right: 1px solid #000;">国家
                                        </td>
                                        <td align="center">@Model.CountryName
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td rowspan="5" width="30%" align="center" valign="middle" style="padding: 5px;">
                                @{
                if (Model.HasBattery)
                {
                                    <span style="font-size: 40px; line-height: 45px;">D</span>
                                    <span>(带电)</span>
                }
                else
                {
                                    <span style="font-size: 40px; line-height: 45px;">P</span>
                                    <span>(普货)</span>
                }
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div style="text-align: center; padding-top: 10px;">
                <div style="height: 64px;">
                    <img src="/WayBill/BarCode128?code=@Model.BagTagNumber" />
                </div>
                <div style="font-size: 16px; line-height: 1.4;">
                    @Model.BagTagNumber
                </div>
            </div>
            <div style="position: absolute; width: 100%; bottom: 10px; font-size: 16px; text-align: right; line-height: 20px;">
                <span style="margin-right: 20px;">福州纵腾网络科技发</span>
            </div>
        </div>    
            }
        }
    }
</body>
</html>
