@model LMS.FrontDesk.Controllers.BillingController.Models.FreightTrialViewModels
@{
    ViewBag.Title = "运费计算";
           }
   <link href="@Url.Content("~/Scripts/chosen/chosen.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/chosen/chosen.jquery.js")" type="text/javascript"></script>
<div class="main_in">
    <div class="constr">
        <div class="constr_in">
            <div class="min_minBox">
                <div class="pt20 pb20">
                    <div class="bread_area mb15">
                        <a href="#" class="u u12 mr5" title="回到首页"></a>
                        <span class="vm">
                            您当前所在的位置：
                            <a href="#" class="tdn" title="回到首页">首页</a>
                            -->
                            <span href="#" class="bread_on">
                                运费计算
                            </span>
                        </span>
                        
                    </div>
                    <div class="twoSolid"></div>
                    <div class="tj  mt-11">
                        <span class="dib_ww20"></span>
                        <span class="dib_ww20"></span>
                        <span class="dib_ww20"></span>
                        
                       @* <a href="http://www.baidu.com/" class="menu_in_off" title="公司简介">
                            <span class="u u11 mr50"></span>
                            <span class="db">
                                <span class="r">
                                    <span class="dib_tt_two">
                                        订单追踪
                                    </span>
                                    <span class="f12 lsp-1">
                                        rder tracking  
                                    </span>
                                </span>
                                <span class="dib_tt_one">O</span></span></a>*@
                                
                        <a href="#" class="menu_in_on" title="运费计算">
                            <span class="u u11 mr50"></span>
                            <span class="db">
                                <span class="r">
                                    <span class="dib_tt_two">
                                        运费计算
                                    </span>
                                    <span class="f12 lsp-1">
                                        reight calculation            
                                    </span>
                                </span>
                                <span class="dib_tt_one">F</span></span></a>
                        
                        <span class="dib_full"></span>
                    </div> 
                    @Html.Partial("_ShowDialog")
                @using (@Html.BeginForm())
                {
                    <div class="mt50">
                        <div class="from_box">
                            <div class="fix from_horizontal">
                                <div class="ww32 l">
                                    <div class="fix">
                                        <span class="info_box info_middle">目的地国家 </span>
                                        @Html.DropDownListFor(p => p.Filter.CountryCode, (List<SelectListItem>) ViewBag.CountryList, new Dictionary<string, object> {{"class", "chzn-select-deselect select_middle"}, {"data-placeholder", "请选择..."}})
                                      
                                    </div>
                                </div>
                                <div class="cell">
                                    <div class="fix">
                                        <div class="l ww44">
                                            <div class="fix">
                                                <span class="info_box info_middle">包裹重量kg： </span>
                                                @Html.TextBoxFor(f => f.Filter.Weight, new {@class = "txt size_short"})
                                            
                                            </div>
                                        </div>
                                        <div class="cell pl20 fix">
                                            <span class="info_box info_middle">包裹体积(cm)</span>
                                            长:
                                            @Html.TextBoxFor(f => f.Filter.Length, new {@class = "txt_short txt"})
                                            宽:
                                            @Html.TextBoxFor(f => f.Filter.Width, new {@class = "txt_short txt"})
                                            高:
                                            @Html.TextBoxFor(f => f.Filter.Height, new {@class = "txt_short txt"})
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="fix from_horizontal">
                                <div class="ww32 l">
                                    <div class=" fix">
                                        <span class="info_box info_middle">包裹类型</span>
                                        @Html.DropDownListFor(p => p.Filter.PackageType, (List<SelectListItem>) ViewBag.GoodsTypeList, new Dictionary<string, object> {{"class", "chzn-select-deselect select_middle"}, {"data-placeholder", "请选择..."}})
                                      
                                    </div>
                                </div>

                            </div>
                            <div class="fix ">
                                <div class="ww32 l">
                                    <div class="from_horizontal fix">
                                        <span class="info_box info_middle"></span>
                                        <input type="submit" class="btn btn_greent" value="提交" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
                    <div class="ovh mt20">
                        <div class="mr-1">
                            <table class="out_order" width="100%">
                                <tr>
                                    <th width="5%">
                                        序号   
                                    </th>
                                    <th width="15%">
                                        运输方式 
                                    </th>
                                    <th width="10%">
                                        计算重量(kg)
                                    </th>
                                    <th width="7%">
                                        运费
                                    </th>
                                    <th width="7%">
                                        挂号费 
                                    </th>
                                    <th width="7%">
                                        燃油费 
                                    </th>
                                    <th width="7%">
                                        其它费用 
                                    </th>
                                    <th width="10%">
                                        总费用 
                                    </th>
                                    <th width="10%">
                                        时效 
                                    </th>
                                     <th width="15%">
                                        备注
                                    </th>
                                </tr>
                                
                                 @{
            
            int i = 1;
        }
        @foreach (var item in Model.FreightList)
        {

            bool flag = i % 2 > 0;
            <tr class="@(flag ? "table_single" : "table_even")">
                <td valign="middle">
                    @(i)</td>
                <td>@item.ShippingMethodName</td>
                <td>@item.Weight</td>
                <td>@item.ShippingFee</td>
                <td>@item.RegistrationFee</td>
                <td>@item.FuelFee</td>
                <td>@(item.SundryFee)</td>
                <td>@(item.TotalFee)</td>
                <td>@item.DeliveryTime</td>
                <td>@item.Remarks</td>
            </tr>
            {
                i++;
            }
        }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    		
</div><script type="text/javascript">
    var config = {
        '.chzn-select': {},
        '.chzn-select-deselect': { allow_single_deselect: true },
        '.chzn-select-no-single': { disable_search_threshold: 10 },
        '.chzn-select-no-results': { no_results_text: 'Oops, nothing found!' },
        '.chzn-select-width': { width: "95%" }
    };
    for (var selector in config) {
        $(selector).chosen(config[selector]);
    }
    ;
    
    
    </script>