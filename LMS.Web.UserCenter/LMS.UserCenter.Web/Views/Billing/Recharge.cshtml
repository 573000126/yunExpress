                    alert("保存成功！");
                } else if (data == "0") {
                    alert("保存失败!");
                } else {
                    alert(data.Message);
                }
            },
            complete: function (data) {
                $("#editfrom #Savebnt").attr('disabled', false);
            }
        });*@
    }
</script>