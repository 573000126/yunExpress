            type: "POST",
            url: "@Url.Action("CreateRechargeRecord")",
            dataType: "json",
            data: $("#editfrom").serialize(),
            success: function (data) {
                if (data == "1") {
                    $("input[type='text']").val("");
                    $("input[type='file']").val("");
